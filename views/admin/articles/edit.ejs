<%- include('../../partials/header.ejs') %>
<body>
  <%- include('../../partials/navbar.ejs') %>
  <div class="container">
    <hr />
    <div class="card">
      <div class="card-header">
        <h2>Edição de artigo</h2>
      </div>
      <div class="card-body">
        <form action="/articles/update" method="post">
          <input
            class="form-control"
            type="text"
            name="title"
            id="title"
            placeholder="Defina o título do artigo"
            value="<%= article.title %>"
          />
          <textarea
            class="form-control"
            placeholder="Escreva o artigo aqui!"
            name="article"
            id="article"
          >
<%= article.body %></textarea
          >
          <label>Categoria</label>
          <select name="categoryId" class="form-control">
            <option>Selecione a categoria do seu artigo.</option>
            <% categories.forEach(category => { %>
            <!-- br -->
            <% if(category.id == article.categoryId) { %>
            <option value="<%= category.id %>" selected>
              <%= category.title %>
            </option>
            <% } else { %>
            <option value="<%= category.id %>"><%= category.title %></option>
            <% } %> <% }) %>
          </select>
          <input type="hidden" name="id" value="<%= article.id %>" />
          <button class="btn btn-success">Atualizar</button>
        </form>
      </div>
    </div>
  </div>
</body>
<%- include('../../partials/footer.ejs') %>
<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5.8.2-114/langs/pt_BR.js"></script>
<script src="/tinymce/js/tinymce/tinymce.min.js"></script>
<script>
  tinymce.init({
    language: 'pt_BR',
    selector: '#article',
    plugins: [
      'advlist',
      'autolink',
      'link',
      'image',
      'lists',
      'preview',
      'searchreplace',
      'wordcount',
      'fullscreen',
      'insertdatetime',
      'media',
      'save',
      'table',
      'emoticons'
    ]
  })
</script>
