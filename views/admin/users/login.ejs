<%- include('../../partials/header.ejs')%>
<body>
  <%- include('../../partials/navbar.ejs')%>
  <div class="container">
    <hr />
    <div class="card mt-5">
      <div class="card-header">
        <h1>Login</h1>
      </div>
      <div class="card-body">
        <form action="/authenticate" method="post" class="d-grid">
          <label for="email">Digite seu e-mail</label>
          <input
            class="form-control"
            type="email"
            name="email"
            id="email"
            placeholder="email@example.com"
          />
          <label for="password">Digite sua senha:</label>
          <input
            class="form-control"
            type="password"
            name="password"
            id="password"
            placeholder="Senha"
          />
          <button type="submit" class="btn btn-success btn-block">
            Entrar
          </button>
        </form>
      </div>
    </div>
  </div>
</body>
<%- include('../../partials/footer.ejs')%>
